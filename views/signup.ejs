<%- include top.ejs %>

<div class="col-sm-6">
  <form action="/users/signup" method="POST">
    <div class="form-group">
      <label for="username">Uusário:</label>
      <input name="username" name="username" type="text" placeholder="Digite um usuário" class="form-control" /><br />
    </div>

    <div class="form-group">
      <label for="password">Senha:</label>
      <input name="password" name="password" type="password" placeholder="Digite uma senha"
        class="form-control" /><br />
    </div>

    <div class="form-group">
      <label for="email">E-mail:</label>
      <input id="email" name="email" type="text" placeholder="Digite um e-mail" class="form-control" /><br />
    </div>

    <div class="form-group">
      <label for="profile">Perfil:</label>
      <select class="form-control" id="profile" name="profile">
        <option value="1">Usuário</option>
        <option value="2">Administrador</option>
      </select><br />
    </div>
    <br>
    <div class="form-group">
      <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
  </form>
  <% if(message) { %>
  <div class="alert alert-danger">
    <%= message %>
  </div>
  <%}%>
</div>
<%- include bottom.ejs %>