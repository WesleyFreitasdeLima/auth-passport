<%- include top.ejs %>

<div class="col-sm-6">

  <form action="/login" method="POST">
    <div class="form-group">
      <label for="username">Usuário:</label>
      <input id="username" name="username" type="text" placeholder="Digite seu usuário" class="form-control" /><br />
    </div>

    <div class="form-group">
      <label for="password">Senha:</label>
      <input id="password" name="password" type="password" placeholder="Digite sua senha" class="form-control" /><br />
    </div>
    <input type="submit" value="Login" class="btn btn-primary" />
  </form>

  <hr />
  <% if(message) { %>
  <p>
  <div class="alert alert-danger">
    <%= message %>
  </div>
  </p>
  <%}%>

    <p>
      <a href="/users/forgot">Esqueceu sua senha?</a> | <a href="/users/signup">Não possui cadastro?</a>
    </p>

  </div>
<%- include bottom.ejs %>